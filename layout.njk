<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>
      {% if options.title %}
        {{ options.title }}
      {% else %}
        Language Data Table
      {% endif %}
    </title>
    <style>{{ css | safe }}</style>
  </head>
  <body>
    <h1>
      {% if options.title %}
        {{ options.title }}
      {% else %}
        Language Data Table
      {% endif %}
    </h1>
    <article>
      <table>
        <tr>
          <th>Phrase Key \ Languages</th>
          {% for langTag in file.table.languageTags() %}
            <th>{{ langTag }}</th>
          {% endfor %}
        </tr>
        {% for key in file.table.keys %}
        <tr>
          <th>{{ key }}</th>
          {% for langTag in file.table.languageTags() %}
            <td>{{ file.table.getPhrase(langTag, key) }}</td>
          {% endfor %}
        </tr>
        {% endfor %}
      </table>
    </article>
    <footer>
      <nav>
        <ul>
          <li>
            Generated by {{ pkg.name }}@<a href="https://npm.im/{{ pkg.name }}">{{ pkg.version }}</a>
          </li>
        </ul>
      </nav>
    </footer>
  </body>
</html>
